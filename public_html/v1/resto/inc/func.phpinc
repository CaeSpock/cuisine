    $stp  = "select * from USUARIOCOMISIONES u, COMISIONES c where u.comision_id=c.comision_id and ";
    $stp .= "u.user_id='$usuario_com' and c.tipocomision_id='$tipo_com' ";
    $stp .= "and u.usuariocomision_status='1' limit 1;";
    $qtp = db_query($stp);
    $comision_funcion = 0;
    if ($qtp->num_rows == 0) {
