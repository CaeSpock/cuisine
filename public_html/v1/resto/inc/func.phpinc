  function secondstohuman($ss) {
    $s = $ss%60;
    $m = floor(($ss%3600)/60);
    $h = floor(($ss%86400)/3600);
    $d = floor(($ss%2592000)/86400);
    $M = floor($ss/2592000);
    $str_ret = "";
    if ($M > 0) { $str_ret .= "$M"."m, "; }
    if ($d > 0) { $str_ret .= "$d"."d "; }
    $str_ret .= str_pad($h, 2, "0",STR_PAD_LEFT).":".str_pad($m, 2, "0",STR_PAD_LEFT);
    // $str_ret .= ":$s";
    return $str_ret;
  }
